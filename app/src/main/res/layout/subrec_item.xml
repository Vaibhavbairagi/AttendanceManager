<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subrec_item_decor"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_ll"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_date"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="01-01-20"
            android:padding="5dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_attended"
            android:switchMinWidth="60dp"
            android:padding="5dp"
            android:checked="true"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rec_topic"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/item_ll"
        android:layout_toStartOf="@+id/rec_edit"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="abcdefghijklmnpqrstuvwxyzabcdefghijklmnpqrstuvwxyzabcdefghijklmnpqrstuvwxyzabcdefghijklmnpqrstuvwxyzabcdefghijklmnpqrstuvwxyz"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rec_edit"
        android:src="@drawable/ic_edit_black_24dp"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>